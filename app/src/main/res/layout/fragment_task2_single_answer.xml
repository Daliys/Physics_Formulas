<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Task2SingleAnswer">

    <ImageView
        android:id="@+id/imageView_fragment_task2_single_answer_backgroung"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginTop="5dp"
        android:src="@color/colorPanelAnswer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/colorButtonNormal" />

    <TextView
        android:id="@+id/textView_fragment_task2_single_answer_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="1. "
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_fragment_task2_single_answer_backgroung"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_fragment_task2_single_answer_formula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/formula_1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_fragment_task2_single_answer_backgroung"
        app:layout_constraintEnd_toEndOf="@+id/imageView_fragment_task2_single_answer_backgroung"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_fragment_task2_single_answer_formula"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="Нормальное ускорение"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_fragment_task2_single_answer_backgroung"
        app:layout_constraintEnd_toStartOf="@+id/imageView_fragment_task2_single_answer_formula"
        app:layout_constraintStart_toEndOf="@+id/textView_fragment_task2_single_answer_counter"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>